# Environment Configuration for Phishing Detection Backend
# Copy this file to .env and customize as needed

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Phishing Detection API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# Model Settings
# =============================================================================
# Device for ML models: cuda, cpu, or auto
MODEL_DEVICE=auto

# Model weights (should sum to 1.0)
ELECTRA_WEIGHT=0.40
BIFORMER_WEIGHT=0.35
LGBM_WEIGHT=0.25

# Threshold for phishing classification (from tuned_thresholds_precision.json)
PHISHING_THRESHOLD=0.0863

# =============================================================================
# External APIs (Optional)
# =============================================================================
# Google Safe Browsing API
# Get key from: https://developers.google.com/safe-browsing/v4/get-started
GOOGLE_SAFE_BROWSING_API_KEY=

# VirusTotal API (Optional)
# Get key from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=

# =============================================================================
# Database
# =============================================================================
# SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./phishing_detection.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/phishing_db

# =============================================================================
# Cache (Optional)
# =============================================================================
# Redis URL for caching
REDIS_URL=
CACHE_TTL=3600

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/phishing_detection.log

# =============================================================================
# CORS Settings (Adjust for production)
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=*
